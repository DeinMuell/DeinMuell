<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@drawable/background_melden" >

        <EditText
            android:id="@+id/editOrt"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editStraße"
            android:layout_alignLeft="@+id/editStraße"
            android:layout_marginBottom="55dp"
            android:ems="10"
            android:hint="Ort"
            android:textColor="@android:color/black" 
            android:background="#FFAEC9">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editStraße"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:ems="10"
            android:hint="Straße" 
            android:textColor="@android:color/black"
            android:background="#FFAEC9" />

        <Button
            android:id="@+id/evil_btn1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/typ_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/buttonshape5"
            android:text="Speichern"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/typ_spinner"
            style="@style/StyleMuelltyp"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editStraße"
            android:layout_below="@+id/editOrt"
            android:layout_marginTop="50dp"
            android:background="#FFAEC9"
            android:entries="@array/muelltypen" />

    </RelativeLayout>